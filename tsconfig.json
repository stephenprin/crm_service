{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "CommonJS",              
    "target": "ES2020",                
    "lib": ["ES2020"],                 
    "types": ["node"],                 
    "esModuleInterop": true,            
    "moduleResolution": "node",     

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true              
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
